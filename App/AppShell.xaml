<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:App.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="App">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Register Page"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />

    <TabBar Title="Main" Route="MainTabs">
        <Tab Title="Home" Route="MainHome">
            <ShellContent Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
        </Tab>
    </TabBar>

    <TabBar Title="Admin" Route="AdminTabs">
        <Tab Title="Dashboard" Route="AdminDashboard">
            <ShellContent Title="Dashboard"
                          ContentTemplate="{DataTemplate views:AdminPage}"
                          Route="AdminPage" />
        </Tab>
    </TabBar>

</Shell>
